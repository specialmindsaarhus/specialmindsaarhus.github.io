---
import Layout from '../layouts/Layout.astro';
import CookieGameWrapper from '../components/cookie-game/CookieGameWrapper';
---

<Layout title="Algorithm Cookie Game - Special Minds Aarhus">
	<main>
		<div class="game-container">
			<CookieGameWrapper client:only="react" />
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		max-width: 1400px;
		width: 100%;
		min-height: 100vh;
	}

	.game-container {
		padding: 2rem 0;
	}

	:global(.game-container) {
		color: #333;
	}

	:global(.game-container *) {
		box-sizing: border-box;
	}
</style>
