# Copy this file to .env and fill in the values.
# .env is gitignored — never commit it.

# Directus security keys — generate with: openssl rand -hex 32
KEY=replace-with-random-hex-64-chars
SECRET=replace-with-random-hex-64-chars

# PostgreSQL password
DB_PASSWORD=replace-with-strong-password

# Directus admin account (created on first boot)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=replace-with-strong-password

# Public URL of this Directus instance
# Local dev:
PUBLIC_URL=http://localhost:8055
# Production (set in Coolify env vars):
# PUBLIC_URL=https://cms.spmi.dk
